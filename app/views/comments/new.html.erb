<%= render 'shared/form_common', title: 'コメント返信フォーム' %>

    <div class="form-width">
        <%= form_with(url: "/comments/new", method: "post") do |f| %>
            <%= render 'shared/error_comment_messages' %>

            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :post_id, value: @post_id %>

            <%= f.label :comment, "コメント" %><br>
            <%= f.text_area :comment, class: 'form-control' %><br><br>

            <%= f.submit "コメントする", class: "btn btn-primary" %>
            <div class="mt-3">
                <button type="button" class="btn btn-secondary" onclick="history.back();">戻る</button>
            </div>
        <% end %>
    </div>
</div>