<% provide(:title, 'ユーザー詳細') %>
<div class="container">
    <div class="text-center">
        <h1>ユーザー詳細</h1>

        <h3 class="mt-3"><%= @user.name %></h3>
        <p><%= @user.email %></p>

        <%= link_to("戻る",posts_path, class: "btn btn-secondary me-3") %>
        <% if @user.id == current_user.id %>
            <%= link_to("編集","/users/#{@user.id}/edit", class: "btn btn-primary me-3") %>
        <% end %>
    </div>
</div>